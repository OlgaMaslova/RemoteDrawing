<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawingLayout"
    android:background="@color/background"

    >

    <RelativeLayout
        android:id="@+id/drawing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonRoom"
        android:layout_below="@+id/buttonColor">

    </RelativeLayout>

    <Button
        android:id="@+id/buttonColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:text="Change Color" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonColor"
        android:layout_alignBottom="@+id/buttonColor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:text="Clear All" />



    <Button
        android:id="@+id/buttonRoom"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="Change Room"
        android:textSize="12dp"
        android:layout_alignTop="@+id/editRoom"

        android:layout_alignRight="@+id/buttonClear"
        android:layout_alignEnd="@+id/buttonClear" />

    <TextView
        android:id="@+id/YourRoomText"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textAlignment="center"

        android:layout_above="@+id/buttonRoom"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editRoom"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Choose your room..."
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonColor"
        android:layout_alignStart="@+id/buttonColor" />
</RelativeLayout>
