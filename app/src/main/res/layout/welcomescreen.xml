<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/welcome_screen"
    android:background="@color/blueviolet">

    <EditText
        android:id="@+id/nicknameInput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/room_input"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/room_input"
        android:layout_marginTop="27dp"
        android:background="@color/white"
        android:hint="Enter your nickname..."
        android:inputType="text" />

    <EditText
        android:id="@+id/room_input"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:inputType="text"
        android:background="@color/white"
        android:hint="Choose your room..."
        android:layout_marginTop="22dp"
        android:layout_below="@+id/nicknameInput"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="OK"
        android:layout_below="@+id/room_input"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
